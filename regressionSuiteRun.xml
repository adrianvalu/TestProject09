<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression">
    <listeners>
        <listener class-name="Utils.ExtentTestListener"></listener>
    </listeners>
    <test name="logout">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="Tests.Nelbo.LogoutTests"/>
        </classes>
    </test>

    <test name="searchProduct">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="Tests.Nelbo.SearchTests"/>
        </classes>
    </test>

    <test name="Product">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="Tests.Nelbo.ProductTests"/>
        </classes>
    </test>

</suite>