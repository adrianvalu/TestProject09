<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Smoke">
    <listeners>
        <listener class-name="Utils.ExtentTestListener"></listener>
    </listeners>

    <test name="loginPositiveTest">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="Tests.Nelbo.LoginTests"/>
        </classes>
    </test>

    <test name="addProductToCartTest">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="Tests.Nelbo.ProductTests"/>
        </classes>
    </test>

    <test name="searchProductTest">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="Tests.Nelbo.SearchTests"/>
        </classes>
    </test>
</suite>